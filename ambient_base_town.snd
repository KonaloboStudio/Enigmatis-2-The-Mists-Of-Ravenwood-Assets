		   <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="falling_stick_hard.wav"></CSampleFile>
        </CSample>

  	    <CSample Weight="8" Volume="0.5">
		<!-- Falling stick soft -->
		   <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="falling_stick_soft.wav"></CSampleFile>
        </CSample>

  	    <CRandomContainer Weight="60" Volume="0.6" FadeInTime="0.25" FadeOutTime="0.25">
		<!-- Artificial Squeak -->
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="05_Artificial_Squeak_2.wav"></CSampleFile>
		   </CSample>
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="05_Artificial_Squeak_6.wav"></CSampleFile>

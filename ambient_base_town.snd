		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="81_Artificial_Squeak.wav"></CSampleFile>
		   </CSample>
        </CRandomContainer>

  	    <CRandomContainer Weight="10" Volume="0.75" FadeInTime="0.25" FadeOutTime="0.25">
		<!-- Natural Squeak -->
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="82_Natural_Squeak.wav"></CSampleFile>
		   </CSample>
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="07_Natural_Squeak_2.wav"></CSampleFile>
		   </CSample>
        </CRandomContainer>

  	    <CRandomContainer Weight="20" Volume="0.75">
		<!-- Birds: Owl -->
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="1.0" FileName="15_bird_2_1.wav"></CSampleFile>

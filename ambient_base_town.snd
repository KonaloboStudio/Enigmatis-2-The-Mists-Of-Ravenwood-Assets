           </CSample>
		   </CSoundContainer>
		   <CSoundContainer WaitAfter="1.0">
		   <CSample>
              <CSampleFile Pan="0.000" Pitch="1.000" Volume="1.0" FileName="51_Walking_Grass_2.wav"></CSampleFile>
           </CSample>
		   </CSoundContainer>
		</CSequenceContainer>

    </CRandomContainer>
</Sound>
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="cicada_1.wav"></CSampleFile>
		   </CSample>
           <CSample Weight="1">
		      <CSampleFile Pan="0.000" Volume="1.0" Pitch="0.500" FileName="cicada_2.wav"></CSampleFile>
		   </CSample>
        </CRandomContainer>

		<CSequenceContainer Weight="10" Volume="0.3">
		<!-- Sneaking dirt: several steps -->
		   <CSoundContainer WaitAfter="1.0">
		   <CSample>
              <CSampleFile Pan="0.000" Pitch="1.000" Volume="0.9" FileName="51_Walking_Grass_1.wav"></CSampleFile>
